Description: Vertical Tabs max 10, Horizontal Tabs max 5, converts to Accordion beyond these max numbers.
{% endcomment %}


{% if content %}

  {% assign count = content | find:"collapsible-title" %}
  {% assign active = content | find:"collapsible-title is-active" %}
  {% assign class = ' type-tabs-vertical' %}

  {% if type == 'tabs-horizontal' %}
    {% assign class = ' type-tabs-horizontal' %}
  {% endif %}

  {% if type == 'tabs-horizontal' and count > 5 %}
    {% assign class = ' type-tabs-accordion' %}
  {% endif %}

  {% if type == 'tabs-vertical' and count > 10 %}
    {% assign class = ' type-tabs-accordion' %}
  {% endif %}

  {% if active > 1 %}
    {% assign content = content | replace: 'collapsible-title is-active', 'collapsible-title' %}
    {% assign content = content | replace_first: 'collapsible-title', 'collapsible-title is-active' %}
  {% endif %}

  <dl class="collapsible{{ class }}" data-count="{{ count }}">{{ content }}</dl>

{% endif %}